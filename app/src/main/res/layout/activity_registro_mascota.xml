<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_blue"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="36dp">

        <!-- Botón volver -->

        <!-- Título -->

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:letterSpacing="0.1"
            android:text="REGISTRAR MASCOTA"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnBack" />

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="Volver"
            android:padding="4dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <!-- Icono de mascota -->

        <!-- Campo Nombre -->

        <ImageView
            android:id="@+id/ivMascotaIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:alpha="0.8"
            android:src="@drawable/ic_perro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.463"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/accent_green"
            tools:layout_editor_absoluteY="91dp" />

        <TextView
            android:id="@+id/labelNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOMBRE DE LA MASCOTA:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:letterSpacing="0.1"
            app:layout_constraintTop_toBottomOf="@id/ivMascotaIcon"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/labelNombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeColor="@color/accent_green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej: Max, Luna, Toby"
                android:inputType="textCapWords"
                android:textColor="@color/black"
                android:padding="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo Especie -->
        <TextView
            android:id="@+id/labelEspecie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ESPECIE:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:letterSpacing="0.1"
            app:layout_constraintTop_toBottomOf="@id/tilNombre"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEspecie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/labelEspecie"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeColor="@color/accent_green"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/actvEspecie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Selecciona la especie"
                android:inputType="none"
                android:textColor="@color/black"
                android:padding="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo Raza -->
        <TextView
            android:id="@+id/labelRaza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RAZA:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:letterSpacing="0.1"
            app:layout_constraintTop_toBottomOf="@id/tilEspecie"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilRaza"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/labelRaza"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeColor="@color/accent_green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etRaza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej: Labrador, Mestizo, Siamés"
                android:inputType="textCapWords"
                android:textColor="@color/black"
                android:padding="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campos Edad y Peso en una fila -->
        <LinearLayout
            android:id="@+id/layoutEdadPeso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tilRaza"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp">

            <!-- Campo Edad -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EDAD (años):"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEdad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="@color/accent_green">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEdad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:padding="12dp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Campo Peso -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PESO (kg):"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPeso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="@color/accent_green">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPeso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0.0"
                        android:inputType="numberDecimal"
                        android:textColor="@color/black"
                        android:padding="12dp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Campo Color -->
        <TextView
            android:id="@+id/labelColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COLOR:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:letterSpacing="0.1"
            app:layout_constraintTop_toBottomOf="@id/layoutEdadPeso"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/labelColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeColor="@color/accent_green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej: Negro, Blanco, Marrón"
                android:inputType="textCapWords"
                android:textColor="@color/black"
                android:padding="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo Sexo -->
        <TextView
            android:id="@+id/labelSexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEXO:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:letterSpacing="0.1"
            app:layout_constraintTop_toBottomOf="@id/tilColor"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"/>

        <RadioGroup
            android:id="@+id/rgSexo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/labelSexo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/rbMacho"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Macho"
                android:textColor="@color/white"
                android:buttonTint="@color/accent_green"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbHembra"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hembra"
                android:textColor="@color/white"
                android:buttonTint="@color/accent_green"/>
        </RadioGroup>

        <!-- CheckBox Esterilizado -->
        <CheckBox
            android:id="@+id/cbEsterilizado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esterilizado/Castrado"
            android:textColor="@color/white"
            android:buttonTint="@color/accent_green"
            app:layout_constraintTop_toBottomOf="@id/rgSexo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Botón Registrar -->
        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/accent_green"
            android:letterSpacing="0.1"
            android:text="REGISTRAR MASCOTA"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cbEsterilizado" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>