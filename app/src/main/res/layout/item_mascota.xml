<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Icono de mascota -->
        <ImageView
            android:id="@+id/ivMascotaIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_perro"
            android:background="@drawable/circle_background"
            android:padding="12dp"
            app:tint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Nombre de la mascota -->
        <TextView
            android:id="@+id/tvNombreMascota"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Max"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/ivMascotaIcon"
            app:layout_constraintStart_toEndOf="@id/ivMascotaIcon"
            app:layout_constraintEnd_toStartOf="@id/btnEditar"/>

        <!-- Raza y especie -->
        <TextView
            android:id="@+id/tvRazaEspecie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Labrador • Perro"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvNombreMascota"
            app:layout_constraintStart_toEndOf="@id/ivMascotaIcon"
            app:layout_constraintEnd_toStartOf="@id/btnEditar"/>

        <!-- Edad y peso -->
        <LinearLayout
            android:id="@+id/layoutInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvRazaEspecie"
            app:layout_constraintStart_toEndOf="@id/ivMascotaIcon"
            app:layout_constraintEnd_toStartOf="@id/btnEditar">

            <TextView
                android:id="@+id/tvEdad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 años"
                android:textColor="@color/primary_blue"
                android:textSize="13sp"
                android:drawableStart="@drawable/ic_age"
                android:drawablePadding="4dp"
                android:drawableTint="@color/primary_blue"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/tvPeso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 kg"
                android:textColor="@color/primary_blue"
                android:textSize="13sp"
                android:drawableStart="@drawable/ic_weight"
                android:drawablePadding="4dp"
                android:drawableTint="@color/primary_blue"/>
        </LinearLayout>

        <!-- Botón editar -->
        <ImageView
            android:id="@+id/btnEditar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_edit"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/accent_green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Editar mascota"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>