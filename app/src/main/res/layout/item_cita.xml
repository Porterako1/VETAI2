<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Indicador de color lateral -->
        <View
            android:id="@+id/viewIndicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/accent_green"
            android:layout_marginEnd="16dp"/>

        <!-- Contenido de la cita -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 de Diciembre, 2025"
                android:textColor="@color/primary_blue"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:30 AM"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvMotivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consulta General"
                android:textColor="@color/gray"
                android:textSize="13sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmada"
                android:textColor="@color/accent_green"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- BotÃ³n eliminar -->
        <ImageView
            android:id="@+id/btnEliminar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#E53935"
            android:contentDescription="Eliminar cita"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>